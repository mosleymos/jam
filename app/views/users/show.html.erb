						<li><%= if @user.profession.present? then @user.profession else "---" end%></li>
						<li><%= if @user.religion.present? then @user.religion else "---" end%></li>
						<li><%= if @user.astral.present? then @user.astral else "---" end%></li>
					</ul>
				</div>

